::-webkit-scrollbar
  background -webkit-linear-gradient(right,darkGreen,forestGreen,lightGreen)
::-webkit-scrollbar-thumb
  background -webkit-linear-gradient(right,darkGreen,green,#00BB34)
  border #FFF 1px solid
  border-left 0
  border-radius 1em 0
  border-right 0
::-webkit-scrollbar-thumb:hover
  background -webkit-linear-gradient(right,darkGreen,#006D00,#00A32D)
::-webkit-scrollbar-thumb:active
  background -webkit-linear-gradient(right,darkGreen,#050,#019229)
